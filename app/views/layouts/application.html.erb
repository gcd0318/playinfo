<!DOCTYPE html>
<html>
<head>
  <title>PlayInfo</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'prototype' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="banner">
    <%= image_tag("logo.png" ) %>
    <%= @page_title || "Play Info" %>
  </div>
  <div id="columns">
    <div id="side">
    <% if session[:user_id] %>
      <br />
      <%= link_to 'Home', '/' %><br />
      <%= link_to 'Users', users_path %><br />
      <%= link_to 'Plays', plays_path %><br />
      <br />
      <%= button_to 'Logout', logout_path, :method => :delete %>
    <% end %>
    </div>
    <div id="main">
      <% session[:user_id] = @user.id if @user %>
      <%= yield %>
    </div>
  </div>
</body>
</html>
