<h1>Listing plays</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Theater</th>
    <th>Added by</th>
    <th>Verified by</th>
    <th>Players</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plays.each do |play| %>
  <tr>
    <td><%= play.name %></td>
    <td><%= play.theater_id %></td>
    <td><%= play.added_by %></td>
    <td><%= play.verified_by %></td>
    <td>
      <% play.players.each do |player| %>
        <%= player.name %>
      <% end %>
    </td>
    <td><%= link_to 'Show', play %></td>
    <td><%= link_to 'Edit', edit_play_path(play) %></td>
    <td><%= link_to 'Destroy', play, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

